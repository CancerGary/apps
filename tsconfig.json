{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "lib": ["dom", "ES2018"],
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "references": [
    {"path": "./packages/app-config"},
    {"path": "./packages/app-types"},
    {"path": "./packages/app-store"},
    {"path": "./packages/utils"},
    {"path": "./packages/react-libs"},
    {"path": "./packages/react-i18n"},
    {"path": "./packages/react-hooks"},
    {"path": "./packages/react-components"},
    {"path": "./packages/react-cms"}
  ]
}
