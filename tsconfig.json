{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@phala/app": ["./packages/app"],
      "@phala/app-assets": ["./packages/app-assets"],
      "@phala/app-bridge": ["./packages/app-bridge"],
      "@phala/app-config": ["./packages/app-config"],
      "@phala/react-components": ["./packages/react-components"],
      "@phala/utils": ["./packages/utils"],
      "@phala/libs/*": ["./packages/libs/*"]
    }
  },
  "exclude": ["build/**/*", "**/build/**/*", "dist/**/*", "**/dist/**/*"],
  "include": ["packages/**/*"]
}
