{
  "name": "phala-apps",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "watch": "run-s watch:*",
    "watch:app-config": "pnpm run watch --filter ./packages/app-config",
    "watch:app-types": "pnpm run watch --filter ./packages/app-types",
    "watch:utils": "pnpm run watch --filter ./packages/utils",
    "watch:react-libs": "pnpm run watch --filter ./packages/react-libs",
    "watch:react-hooks": "pnpm run watch --filter ./packages/react-hooks",
    "watch:react-components": "pnpm run watch --filter ./packages/react-components",
    "watch:app": "pnpm run develop --filter ./packages/app",
    "build:app-config": "pnpm run build --filter ./packages/app-config",
    "build:app-types": "pnpm run build --filter ./packages/app-types",
    "build:utils": "pnpm run build --filter ./packages/utils",
    "build:react-libs": "pnpm run build --filter ./packages/react-libs",
    "build:react-hooks": "pnpm run build --filter ./packages/react-hooks",
    "build:react-components": "pnpm run build --filter ./packages/react-components",
    "build:app": "pnpm run build --filter ./packages/app",
    "preinstall": "npx only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Phala-Network/apps.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Phala-Network/apps/issues"
  },
  "homepage": "https://github.com/Phala-Network/apps#readme",
  "dependencies": {
    "@microsoft/rush": "^5.50.0",
    "@types/node": "^16.4.13",
    "@types/react": "^17.0.16",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.5"
  }
}