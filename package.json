{
  "name": "phala-apps",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "pnpm run build:deps && pnpm run build:app",
    "build:deps": "pnpm recursive --filter ./packages --filter !./packages/app run build",
    "build:app": "cd ./packages/app && pnpm run build",
    "develop": "pnpm run build:deps && run-p develop:*",
    "develop:deps": "pnpm --parallel --filter ./packages  --filter !./packages/app run develop",
    "develop:app": "cd ./packages/app && pnpm run develop",
    "preinstall": "npx only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Phala-Network/apps.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Phala-Network/apps/issues"
  },
  "homepage": "https://github.com/Phala-Network/apps#readme",
  "dependencies": {
    "@types/node": "^16.7.2",
    "@types/react": "^17.0.19",
    "npm-run-all": "^4.1.5",
    "typescript": "4.4.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0"
  }
}