{
  "name": "phala-apps",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "develop": "run-s \"build:!(app)\" && run-p develop:*",
    "develop:app-config": "pnpm run develop --filter ./packages/app-config",
    "develop:app-types": "pnpm run develop --filter ./packages/app-types",
    "develop:app-store": "pnpm run develop --filter ./packages/app-store",
    "develop:utils": "pnpm run develop --filter ./packages/utils",
    "develop:react-libs": "pnpm run develop --filter ./packages/react-libs",
    "develop:react-hooks": "pnpm run develop --filter ./packages/react-hooks",
    "develop:react-components": "pnpm run develop --filter ./packages/react-components",
    "develop:app": "cd ./packages/app && npm run develop",
    "build": "run-s build:*",
    "build:app-config": "pnpm run build --filter ./packages/app-config",
    "build:app-types": "pnpm run build --filter ./packages/app-types",
    "build:app-store": "pnpm run build --filter ./packages/app-store",
    "build:utils": "pnpm run build --filter ./packages/utils",
    "build:react-libs": "pnpm run build --filter ./packages/react-libs",
    "build:react-hooks": "pnpm run build --filter ./packages/react-hooks",
    "build:react-components": "pnpm run build --filter ./packages/react-components",
    "build:app": "cd ./packages/app && npm run build",
    "preinstall": "npx only-allow pnpm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Phala-Network/apps.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Phala-Network/apps/issues"
  },
  "homepage": "https://github.com/Phala-Network/apps#readme",
  "dependencies": {
    "@types/node": "^16.6.0",
    "@types/react": "^17.0.17",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.5"
  }
}